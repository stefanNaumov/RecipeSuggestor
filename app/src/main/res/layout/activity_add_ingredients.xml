<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.stefan.recipesuggestor.AddIngredientsActivity"
    android:background="@drawable/choppingboard"
    android:id="@+id/addIngredientsLayout">

    <TextView android:text="@string/ingredients"
        style="@style/textViewStyle"
        android:id="@+id/ingredientsViewId"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        style="@style/editTextStyle"
        android:layout_height="wrap_content"
        android:id="@+id/addIngredientsInputId"
        android:layout_below="@+id/ingredientsViewId"
        android:layout_alignRight="@+id/ingredientsViewId"
        android:layout_alignEnd="@+id/ingredientsViewId" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/buttonStyle"
        android:text="@string/add"
        android:id="@+id/addIngredientsAddBtnId"
        android:layout_below="@+id/addIngredientsInputId"
        android:layout_alignParentEnd="true" />
    <Button
        style="@style/nextButtonStyle"
        android:id="@+id/goToAddSpicesBtnId"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/addIngredientsInputId"
        android:layout_alignEnd="@+id/addIngredientsInputId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addIngredientslistViewId"
        android:layout_below="@+id/addIngredientsAddBtnId"
        android:layout_alignEnd="@+id/addIngredientsAddBtnId"
        android:layout_above="@+id/goToAddSpicesBtnId" />

</RelativeLayout>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="buttonStyle">
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
       <item name="android:alpha">0.7</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">@drawable/buttonshape</item>
    </style>
    <style name="addButtonStyle">

    </style>
    <style name="textViewStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="nextButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:text">@string/next</item>
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:alpha">0.5</item>
    </style>
    <style name="editTextStyle">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">35sp</item>
        <item name="android:background">@drawable/viewborder</item>
        <item name="android:gravity">top|left</item>
    </style>
    <style name="transparentBackground">
        <item name="android:background">#878787</item>
        <item name="android:alpha">0.5</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="menuSectionsTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FA4700</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="howToPrepareTextStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:background">#878787</item>
        <item name="android:alpha">0.5</item>
        <item name="android:textColor">#000</item>
    </style>
</resources>
